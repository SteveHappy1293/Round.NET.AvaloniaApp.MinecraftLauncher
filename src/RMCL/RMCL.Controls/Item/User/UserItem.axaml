<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="RMCL.Controls.Item.User.UserItem">
    <DockPanel LastChildFill="True" Margin="3">
        <Border Name="SkinHeader" DockPanel.Dock="Left" Margin="5" Width="48" Height="48" CornerRadius="6" BorderThickness="2" BorderBrush="Gray"></Border>
        <StackPanel Name="SkinBody" DockPanel.Dock="Left" Margin="5" VerticalAlignment="Center">
            <TextBlock Name="PlayerName" FontSize="16" FontWeight="Bold" Margin="3"></TextBlock>
            <TextBlock Name="PlayerType" FontSize="13" Margin="3"></TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>
