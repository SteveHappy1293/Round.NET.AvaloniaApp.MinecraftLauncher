<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluentIcons="clr-namespace:FluentAvalonia.FluentIcons;assembly=FluentAvalonia.FluentIcons"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="RMCL.Controls.Item.User.UserItem">
    <DockPanel LastChildFill="True" Margin="3">
        <Border Name="SkinHeader" DockPanel.Dock="Left" Margin="5" Width="48" Height="48"></Border>
        <StackPanel Name="SkinBody" DockPanel.Dock="Left" Margin="5" VerticalAlignment="Center">
            <TextBlock Name="PlayerName" FontSize="16" FontWeight="Bold" Margin="3"></TextBlock>
            <TextBlock Name="PlayerType" FontSize="13" Margin="3"></TextBlock>
        </StackPanel>
        <Button DockPanel.Dock="Right" Margin="5" Width="32" Height="32" HorizontalAlignment="Right">
            <fluentIcons:FluentIcon Icon="Delete20Regular" Margin="-8"/>
        </Button>
    </DockPanel>
</UserControl>
