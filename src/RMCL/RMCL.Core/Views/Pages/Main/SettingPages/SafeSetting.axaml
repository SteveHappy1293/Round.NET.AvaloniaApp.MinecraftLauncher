<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluentIcons="clr-namespace:FluentAvalonia.FluentIcons;assembly=FluentAvalonia.FluentIcons"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:button="clr-namespace:RMCL.Controls.Button;assembly=RMCL.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RMCL.Core.Views.Pages.Main.SettingPages.SafeSetting">
    <ScrollViewer Margin="5" MaxWidth="1200">
        <StackPanel>
            <DockPanel Margin="5">
                <fluentIcons:FluentIcon HorizontalAlignment="Left" Icon="Warning20Regular" Height="40"  Width="40" Margin="20,20"/>
                <TextBlock FontSize="22" VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left">安全</TextBlock>
            </DockPanel>
            <controls:SettingsExpander Header="日志"
                                       Description="启动器所有已保存的日志">
                <controls:SettingsExpander.IconSource>
                    <fluentIcons:FluentIconSource Icon="Book20Regular" />
                </controls:SettingsExpander.IconSource>
                <controls:SettingsExpander.Footer>
                    <button:IconButton Icon="Open20Regular"
                                       Content="打开日志管理器"
                                       Name="OpenLogManagerBtn"></button:IconButton>
                </controls:SettingsExpander.Footer>
            </controls:SettingsExpander>
            
            <controls:SettingsExpander Header="异常"
                                       Description="启动器所有已捕获的异常">
                <controls:SettingsExpander.IconSource>
                    <fluentIcons:FluentIconSource Icon="ErrorCircle20Regular" />
                </controls:SettingsExpander.IconSource>
                <controls:SettingsExpander.Footer>
                    <button:IconButton Icon="Open20Regular"
                                       Content="打开异常管理器"
                                       Name="OpenMistakManagerBtn"></button:IconButton>
                </controls:SettingsExpander.Footer>
            </controls:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
