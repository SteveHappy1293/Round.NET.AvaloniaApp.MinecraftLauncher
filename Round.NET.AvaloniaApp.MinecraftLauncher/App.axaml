<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:downloadGame="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Download.DownloadGame"
             xmlns:launch="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Launch"
             xmlns:allControl="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Pages.AllControl"
             xmlns:dialog="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Dialog"
             xmlns:global="clr-namespace:"
             xmlns:download="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Download"
             xmlns:custom="clr-namespace:Round.NET.AvaloniaApp.MinecraftLauncher.Views.CustomControls"
             xmlns:controls1="clr-namespace:FluentAvalonia.FluentIcons;assembly=FluentAvalonia.FluentIcons"
             xmlns:controls11="clr-namespace:HeroIconsAvalonia.Controls;assembly=HeroIconsAvalonia"
             x:Class="Round.NET.AvaloniaApp.MinecraftLauncher.App"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <styling:FluentAvaloniaTheme CustomAccentColor="DodgerBlue" UseSystemFontOnWindows="True"/>
        
        <StyleInclude Source="/Views/Controls/Style/Animated.axaml" />
        <StyleInclude Source="/Views/Controls/Style/IncludeControls.axaml" />
        <Style Selector="TextBlock.debug-overlay">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Application.Styles>
</Application>
